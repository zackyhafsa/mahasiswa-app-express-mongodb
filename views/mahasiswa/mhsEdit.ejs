<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h3>Form Edit Mahasiswa</h3>
      <% if (typeof errors !== 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form method="post" action="/mhs?_method=PUT">
        <input type="hidden" name="oldName" type="text" value="<%= mhs.nama %>" />
        <div class="mb-3">
          <label for="nama" class="form-label">Nama Lengkap</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            value="<%= mhs.nama %>"
            name="nama"
            required
          />
        </div>
        <div class="mb-3">
          <label for="npm" class="form-label">NPM</label>
          <input
            type="text"
            class="form-control"
            id="npm"
            value="<%= mhs.npm %>"
            name="npm"
            maxlength="10"
            onkeypress="return hanyaAngka(event)"
          />
        </div>
        <div class="mb-3">
          <label for="kelas" class="form-label">Kelas</label>
          <input
            type="text"
            class="form-control"
            id="kelas"
            value="<%= mhs.kelas %>"
            name="kelas"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            value="<%= mhs.email %>"
            name="email"
            required
          />
        </div>
        <button
          type="submit"
          class="btn btn-primary"
          onclick="return confirm('Anda yakin ingin mengubah data anda?')"
        >
          Submit
        </button>
      </form>
    </div>
  </div>
</div>

<script>
  function hanyaAngka(event) {
    var angka = event.which ? event.which : event.keyCode;
    if (angka != 46 && angka > 31 && (angka < 48 || angka > 57)) return false;
    return true;
  }
</script>
