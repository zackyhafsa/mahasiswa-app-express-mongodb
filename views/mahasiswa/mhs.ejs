<h3>Daftar Mahasiswa</h3>
<p>Jika nama anda tidak ada, silahkan daftar terlebih dahulu</p>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <a href="/mhs/add" class="btn btn-primary">Daftar</a>
      <% if (msg.length !== 0) { %>
      <div class="alert alert-success mt-3" role="alert"><%= msg %></div>
      <% } %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">Kelas</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (mhs.length<1) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger" role="alert">
                Daftar Mahasiswa tidak ada, silahkan daftar terlebih dahulu
              </div>
            </td>
          </tr>
          <% } %> <% mhs.forEach((mahasiswa, i) => { %>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= mahasiswa.nama %></td>
            <td><%= mahasiswa.kelas %></td>
            <td>
              <a href="/mhs/detail/<%= mahasiswa.npm %>" class="btn btn-success badge rounded-pil">
                detail
              </a>
              <form action="/mhs?_method=DELETE" method="post" class="d-inline">
                <input type="hidden" name="npm" value="<%= mahasiswa.npm %>" />
                <button
                  type="submit"
                  onclick="return confirm('yakin?')"
                  class="btn btn-danger badge rounded-pil"
                >
                  Hapus
                </button>
              </form>
              <a href="/mhs/update/<%= mahasiswa.npm %>" class="btn btn-warning badge rounded-pil"
                >Edit</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
